{% extends 'base.html.twig' %}
{% block title %} {{ parent() }} - Crear Entrada {% endblock %}
{% block navbar %}
 {{ parent() }}
{% endblock %}
{% block body %}
<div class="container form-ing mx-auto mt-5">
    <br>
    }<div class="row h-100 justify-content-center align-items-center m-5">
       <h3 class="text-center text-light">
      Editar entrada
       <hr>
       </h3>
      
       <div>
       <div class="row">
          <div class="col">
            <div class="card m-3 target">
              <div class="row no-gutters">
                <div class="col-md-4">
                  <img src="{{ asset('uploads/fotos/'~ entrada.foto) }}" class="card-img img-target" alt="...">
                </div>
            <div class="col-md-8 text-secondary">
              <div class="card-body text-center">
              <h5 class="card-title text-info">{{ entrada.titulo }}</h5>
              <p class="card-text"> {{ entrada.descripcion }}</p>
              <p class="card-text text-info">{{ entrada.nombre }}</p>
              <p class="card-text">{{ entrada.fecha_publicacion | date }}</p>
            </div>
    </div>
  </div>
</div>
          </div>
        </div>
        <div class="text-secondary">
            {{ form( editar ) }}
        </div>
         
       </div>
    </div>
</div>

{% endblock %}
